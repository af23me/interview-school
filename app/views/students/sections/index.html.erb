<h1>My Sections</h1>

<li><%= link_to 'Join section', new_students_section_path %></li>

<% if @sections.present? %>
  <table>
    <thead>
      <tr>
        <th>Time</th>
        <th>Mon</th>
        <th>Tue</th>
        <th>Wed</th>
        <th>Thu</th>
        <th>Fri</th>
        <th>Sat</th>
        <th>Sun</th>
      </tr>
    </thead>

    <tbody>
      <% grouped_sections(@sections).each do |time_slot, sections| %>
        <tr>
          <td><%= "#{time_slot}:00" %></td>
          <% (0..6).each do |weekday| %>
            <td>
              <%= sections.select { |i| weekday.in?(i.weekdays) }.map {|i| i.title }.join("\n") %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <li><%= link_to 'Download', download_students_sections_path, format: :pdf %></li>
<% else %>
  <h3>You are not in the any section</h3>
<% end %>